# MongoDB Connection
# MongoDB Atlas kullanıyorsanız:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/unite?retryWrites=true&w=majority

# Yerel MongoDB kullanıyorsanız:
# MONGODB_URI=mongodb://localhost:27017/unite

# Gemini AI API Key (Chatbot AI özellikleri için)
GEMINI_API_KEY=your_gemini_api_key_here

# Server Port
PORT=3000

# Environment
NODE_ENV=development
